@model KidKinder.Entities.Gallery
@{
    ViewBag.Title = "CreateGaleri";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <!-- Basic Form Inputs card start -->
                        <div class="card">
                            <div class="card-header">
                                <h5>Yeni Galeri Girişi</h5>
                                <span>Galeri ile ilgili verileri eksiksiz olarak doldurunuz.</span>
                            </div>

                            <form method="post">
                                <div class="card-block">
                                    
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Resim Adresi</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="ImageUrl" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Durum</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="Status" class="form-control">
                                        </div>
                                    </div>
                                   

                                </div>
                                <button class="btn btn-primary">Resmi Kaydet</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




