<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<body>
    <canvas id="myChart" style="width:100%;max-width:600px"></canvas>
    <script>const xValues = ["Öğretmen Sayısı", "Öğrenci Sayısı", "Veli Sayısı", "Yorum Sayısı"];
            const yValues = [@ViewBag.b, @ViewBag.c,  @ViewBag.e, @ViewBag.a];
            const barColors = [
                "#b91d47",
                "#00aba9",
                "#2b5797",
                "#e8c3b9"

            ];

            new Chart("myChart", {
                type: "doughnut",
                data: {
                    labels: xValues,
                    datasets: [{
                        backgroundColor: barColors,
                        data: yValues
                    }]
                },
                options: {
                    title: {
                        display: true,
                        text: "Okulumuzun İstatistikleri "
                    }
                }
            });</script>
</body>

