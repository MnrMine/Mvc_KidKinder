@model KidKinder.Entities.ClassRoom
@{
    ViewBag.Title = "CreateClassRoom";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <!-- Basic Form Inputs card start -->
                        <div class="card">
                            <div class="card-header">
                                <h5>Yeni Sınıf Girişi</h5>
                                <span>Sınıflar ile ilgili verileri eksiksiz olarak doldurunuz.</span>
                            </div>
                            
                            <form method="post">
                                <div class="card-block">
                                    -  
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Sınıf Adı</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="Title" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Yaş Aralığı</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="AgeOfKinds" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Kontenjan</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="TotalSeat" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Ders Saatleri</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="ClassTime" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Ücret</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="Price" class="form-control">
                                    </div>
                                </div>

                                    </div>
                                <button class="btn btn-primary">Sınıfı Kaydet</button>
                            </form>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

